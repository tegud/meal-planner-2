{
  "compilerOptions": {
      "lib": ["ES2019"],
      "module": "commonjs",
      "target": "ES2019",
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "outDir": "dist"
  },
  "include": ["lib"],
  "exclude": ["node_modules", "tests/**/*.ts"]
}
