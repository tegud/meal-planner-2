{
  "compilerOptions": {
      "target": "ES2019",
      "module": "ES2020",
      "strict": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "outDir": "dist"
  },
  "include": ["lib"],
  "exclude": ["node_modules", "tests/**/*.ts"]
}
